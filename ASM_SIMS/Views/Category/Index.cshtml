@model ASM_SIMS.Models.CategoryViewModel
@{
    ViewData["title"] = "Category Management";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    bool statusSave = Convert.ToBoolean(TempData["save"]);
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-list-alt me-2"></i>Category Management</h2>
        <a class="btn btn-primary" href="@Url.Action("Create", "Category")">
            <i class="fas fa-plus-circle me-1"></i> Add New Category
        </a>
    </div>

    @if (TempData["save"] != null)
    {
        <div class="alert @(statusSave ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @(statusSave ? "Category created successfully!" : "Failed to create category.")
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-light py-3">
            <h5 class="mb-0"><i class="fas fa-table me-2"></i>Category List</h5>
        </div>
        <div class="card-body">
            @if (Model.categoryList.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Avatar</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.categoryList)
                            {
                                <tr>
                                    <td class="fw-bold">#@item.Id</td>
                                    <td>@item.NameCategory</td>
                                    <td class="text-truncate" style="max-width: 200px;" title="@item.Description">
                                        @item.Description
                                    </td>
                                    <td>
                                        <div class="avatar-container">
                                            <img class="img-thumbnail" src="~/SIMS/uploads/images/@item.Avartar"
                                                 alt="@item.NameCategory" width="60" height="60"
                                                 onerror="this.src='https://via.placeholder.com/60?text=No+Image'">
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @(item.Status == "Active" ? "bg-success" : "bg-secondary")">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.CreatedAt.HasValue)
                                        {
                                            @item.CreatedAt.Value.ToString("dd-MM-yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column flex-md-row gap-1">
                                            <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="fas fa-edit me-1"></i> Edit
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                                  onsubmit="return confirm('Are you sure you want to delete this category?');">
                                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                                    <i class="fas fa-trash me-1"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No categories found</h5>
                    <p class="text-muted">Get started by creating your first category.</p>
                    <a class="btn btn-primary mt-2" href="@Url.Action("Create", "Category")">
                        <i class="fas fa-plus me-1"></i> Create Category
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .avatar-container {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.04);
    }

    .btn-group .btn {
        border-radius: 4px;
        margin: 0 2px;
    }

    .gap-1 {
        gap: 0.25rem;
    }
</style>