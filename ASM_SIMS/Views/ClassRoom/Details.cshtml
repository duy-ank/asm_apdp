@model ASM_SIMS.Models.ClassRoomViewModel
@using ASM_SIMS.Models
@{
    ViewData["Title"] = "Class Room Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    var students = ViewBag.Students as List<StudentViewModel>;
    var courseName = ViewBag.CourseName;
    var teacherName = ViewBag.TeacherName;
    string userRole = Context.Session.GetString("UserRole") ?? "";
}

<div class="container-fluid">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-3">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h2 class="mb-0"><i class="fas fa-chalkboard me-2"></i>Class Room Details</h2>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Class Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Class Name</label>
                                <div class="p-2 bg-light rounded">
                                    <i class="fas fa-chalkboard me-2 text-primary"></i>@Model.ClassName
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Course</label>
                                <div class="p-2 bg-light rounded">
                                    <i class="fas fa-book me-2 text-primary"></i>@courseName
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Teacher</label>
                                <div class="p-2 bg-light rounded">
                                    <i class="fas fa-user-tie me-2 text-primary"></i>@teacherName
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Schedule</label>
                                <div class="p-2 bg-light rounded">
                                    <i class="fas fa-clock me-2 text-primary"></i>@Model.Schedule
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Start Date</label>
                                <div class="p-2 bg-light rounded">
                                    <i class="fas fa-calendar-start me-2 text-primary"></i>@Model.StartDate.ToString("yyyy-MM-dd")
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">End Date</label>
                                <div class="p-2 bg-light rounded">
                                    <i class="fas fa-calendar-check me-2 text-primary"></i>@Model.EndDate.ToString("yyyy-MM-dd")
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Location</label>
                                <div class="p-2 bg-light rounded">
                                    <i class="fas fa-map-marker-alt me-2 text-primary"></i>@Model.Location
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Status</label>
                                <div class="p-2 bg-light rounded">
                                    <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-secondary")">
                                        <i class="fas fa-circle me-1"></i>@Model.Status
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (userRole == "Admin")
                    {
                        <div class="mt-4 pt-3 border-top">
                            <a class="btn btn-primary" asp-action="AddStudentToClass" asp-route-classRoomId="@Model.Id">
                                <i class="fas fa-user-plus me-1"></i> Manage Students
                            </a>
                            <a class="btn btn-outline-secondary ms-2" asp-action="Edit" asp-route-id="@Model.Id">
                                <i class="fas fa-edit me-1"></i> Edit Class
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Class Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <div class="mb-4">
                            <i class="fas fa-user-graduate fa-3x text-primary mb-3"></i>
                            <h3>@(students?.Count ?? 0)</h3>
                            <p class="text-muted">Total Students</p>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <div class="border rounded p-3">
                                    <i class="fas fa-calendar-day fa-2x text-info mb-2"></i>
                                    <h6>@Model.StartDate.ToString("yyyy-MM-dd")</h6>
                                    <small class="text-muted">Start Date</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border rounded p-3">
                                    <i class="fas fa-calendar-alt fa-2x text-warning mb-2"></i>
                                    <h6>@Model.EndDate.ToString("yyyy-MM-dd")</h6>
                                    <small class="text-muted">End Date</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-header bg-light py-3">
            <h5 class="mb-0"><i class="fas fa-user-graduate me-2"></i>Students in Class</h5>
        </div>
        <div class="card-body">
            @if (students == null || !students.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No students in this class</h5>
                    <p class="text-muted">Add students to get started with this class.</p>
                    @if (userRole == "Admin")
                    {
                        <a class="btn btn-primary mt-2" asp-action="AddStudentToClass" asp-route-classRoomId="@Model.Id">
                            <i class="fas fa-user-plus me-1"></i> Add Students
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in students)
                            {
                                <tr>
                                    <td class="fw-bold">#@student.Id</td>
                                    <td>@student.FullName</td>
                                    <td>
                                        <a href="mailto:@student.Email" class="text-decoration-none">
                                            <i class="fas fa-envelope me-1 text-muted"></i>@student.Email
                                        </a>
                                    </td>
                                    <td>
                                        <a href="tel:@student.Phone" class="text-decoration-none">
                                            <i class="fas fa-phone me-1 text-muted"></i>@student.Phone
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge @(student.Status == "Active" ? "bg-success" : "bg-secondary")">
                                            @student.Status
                                        </span>
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>Showing @students.Count students in this class
                    </small>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
        border: none;
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,.125);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.04);
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }

    .badge {
        font-size: 0.85em;
        padding: 0.5em 0.75em;
    }

    .border-top {
        border-top: 1px solid #dee2e6 !important;
    }
</style>