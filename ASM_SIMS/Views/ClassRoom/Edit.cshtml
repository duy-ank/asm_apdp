@model ASM_SIMS.Models.ClassRoomViewModel
@using ASM_SIMS.DB
@{
    ViewData["Title"] = "Edit Class Room";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    var courses = ViewBag.Courses as List<Courses>;
    var teachers = ViewBag.Teachers as List<Teacher>;
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h2 class="mb-0"><i class="fas fa-edit text-warning me-2"></i>Edit Class Room</h2>
            </div>

            @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h6 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Validation Errors</h6>
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0"><i class="fas fa-chalkboard me-2"></i>Edit Class Information</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="Edit" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="ClassName" class="form-label fw-bold">Class Name *</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-chalkboard"></i></span>
                                        <input asp-for="ClassName" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="ClassName" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="CourseId" class="form-label fw-bold">Course *</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-book"></i></span>
                                        <select asp-for="CourseId" class="form-control" required>
                                            <option value="">Select Course</option>
                                            @foreach (var course in courses)
                                            {
                                                <option value="@course.Id" selected="@(course.Id == Model.CourseId)">@course.NameCourse</option>
                                            }
                                        </select>
                                    </div>
                                    <span asp-validation-for="CourseId" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="TeacherId" class="form-label fw-bold">Teacher *</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-user-tie"></i></span>
                                        <select asp-for="TeacherId" class="form-control" required>
                                            <option value="">Select Teacher</option>
                                            @foreach (var teacher in teachers)
                                            {
                                                <option value="@teacher.Id" selected="@(teacher.Id == Model.TeacherId)">@teacher.FullName</option>
                                            }
                                        </select>
                                    </div>
                                    <span asp-validation-for="TeacherId" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Status" class="form-label fw-bold">Status *</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-check-circle"></i></span>
                                        <select asp-for="Status" class="form-control" required>
                                            <option value="">Select Status</option>
                                            <option value="Active" selected="@(Model.Status == "Active")">Active</option>
                                            <option value="Inactive" selected="@(Model.Status == "Inactive")">Inactive</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="Status" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="StartDate" class="form-label fw-bold">Start Date *</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                        <input asp-for="StartDate" class="form-control" type="date"
                                               value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
                                    </div>
                                    <span asp-validation-for="StartDate" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="EndDate" class="form-label fw-bold">End Date *</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                        <input asp-for="EndDate" class="form-control" type="date"
                                               value="@Model.EndDate.ToString("yyyy-MM-dd")" required />
                                    </div>
                                    <span asp-validation-for="EndDate" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Schedule" class="form-label fw-bold">Class Schedule</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                        <input asp-for="Schedule" class="form-control" type="text"
                                               placeholder="Example: Monday, 8:00 AM - 10:00 AM" />
                                    </div>
                                    <span asp-validation-for="Schedule" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Location" class="form-label fw-bold">Location</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                        <input asp-for="Location" class="form-control" type="text" />
                                    </div>
                                    <span asp-validation-for="Location" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i> Update Class
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelector('.needs-validation');
            forms.addEventListener('submit', function(event) {
                if (!forms.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                forms.classList.add('was-validated');
            }, false);

            // Date validation
            const startDate = document.querySelector('input[name="StartDate"]');
            const endDate = document.querySelector('input[name="EndDate"]');

            if (startDate && endDate) {
                startDate.addEventListener('change', function() {
                    if (endDate.value && new Date(startDate.value) > new Date(endDate.value)) {
                        alert('Start date cannot be after end date!');
                        startDate.value = endDate.value;
                    }
                    endDate.min = startDate.value;
                });
            }
        });
    </script>

    <style>
        .card {
            border-radius: 10px;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
            color: #212529;
            font-weight: 600;
        }

            .btn-warning:hover {
                background-color: #e0a800;
                border-color: #d39e00;
            }
    </style>
}