@model List<ASM_SIMS.Models.ClassRoomViewModel>
@using ASM_SIMS.DB
@{
    ViewData["Title"] = "Class Room Management";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    bool statusSave = TempData["save"] != null && Convert.ToBoolean(TempData["save"]);
    var courses = ViewBag.Courses as List<Courses>;
    var teachers = ViewBag.Teachers as List<Teacher>;
    string userRole = Context.Session.GetString("UserRole") ?? "";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-chalkboard me-2"></i>Class Room Management</h2>
        @if (userRole == "Admin")
        {
            <a class="btn btn-primary" asp-action="Create">
                <i class="fas fa-plus-circle me-1"></i> Add New Class
            </a>
        }
    </div>

    @if (TempData["save"] != null)
    {
        <div class="alert @(statusSave ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @(statusSave ? "Operation completed successfully!" : "Operation failed!")
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-light py-3">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Class Room List</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Class Name</th>
                                <th>Course</th>
                                <th>Teacher</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Schedule</th>
                                <th>Location</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var course = courses?.FirstOrDefault(c => c.Id == item.CourseId);
                                var teacher = teachers?.FirstOrDefault(t => t.Id == item.TeacherId);
                                <tr>
                                    <td class="fw-bold">#@item.Id</td>
                                    <td>@item.ClassName</td>
                                    <td>
                                        <span class="badge bg-info text-dark">
                                            @(course?.NameCourse ?? "N/A")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">
                                            @(teacher?.FullName ?? "N/A")
                                        </span>
                                    </td>
                                    <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                                    <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                                    <td class="text-truncate" style="max-width: 150px;" title="@item.Schedule">
                                        <i class="fas fa-clock me-1 text-muted"></i>@item.Schedule
                                    </td>
                                    <td class="text-truncate" style="max-width: 120px;" title="@item.Location">
                                        <i class="fas fa-map-marker-alt me-1 text-muted"></i>@item.Location
                                    </td>
                                    <td>
                                        <span class="badge @(item.Status == "Active" ? "bg-success" : "bg-secondary")">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column flex-md-row gap-1">
                                            <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">
                                                <i class="fas fa-eye me-1"></i> Details
                                            </a>
                                            @if (userRole == "Admin")
                                            {
                                                <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                                    <i class="fas fa-edit me-1"></i> Edit
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                                      onsubmit="return confirm('Are you sure you want to delete this class?');">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                                        <i class="fas fa-trash me-1"></i> Delete
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-chalkboard fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No classes found</h5>
                    <p class="text-muted">Get started by creating your first class.</p>
                    @if (userRole == "Admin")
                    {
                        <a class="btn btn-primary mt-2" asp-action="Create">
                            <i class="fas fa-plus me-1"></i> Create Class
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.04);
    }

    .gap-1 {
        gap: 0.25rem;
    }

    .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .badge {
        font-size: 0.85em;
    }
</style>