@model ASM_SIMS.Models.CourseDetail
@{
    ViewData["title"] = "Edit Course";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex align-items-center mb-4">
                <a href="@Url.Action("Index", "Courses")" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h2 class="mb-0"><i class="fas fa-edit text-warning me-2"></i>Edit Course</h2>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0"><i class="fas fa-pencil-alt me-2"></i>Edit Course Details</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data" asp-controller="Courses" asp-action="Edit"
                          class="needs-validation" novalidate>
                        <input asp-for="Id" type="hidden" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="NameCourse" class="form-label fw-bold">Course Name *</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-book"></i></span>
                                        <input asp-for="NameCourse" class="form-control" type="text" required />
                                    </div>
                                    <span asp-validation-for="NameCourse" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="CategoryName" class="form-label fw-bold">Category *</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-list"></i></span>
                                        <select asp-for="CategoryName" class="form-control"
                                                asp-items="@(new SelectList(ViewBag.Categories, "NameCategory", "NameCategory", Model.CategoryName))" required>
                                            <option value="">-- Select Category --</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="CategoryName" class="text-danger small"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label asp-for="StartDate" class="form-label fw-bold">Start Date *</label>
                                            <input asp-for="StartDate" class="form-control" type="date"
                                                   value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
                                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label asp-for="EndDate" class="form-label fw-bold">End Date *</label>
                                            <input asp-for="EndDate" class="form-control" type="date"
                                                   value="@Model.EndDate.ToString("yyyy-MM-dd")" required />
                                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Vote" class="form-label fw-bold">Rating (0-5)</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-star"></i></span>
                                        <input asp-for="Vote" class="form-control" type="number" min="0" max="5"
                                               step="0.1" placeholder="0.0" />
                                    </div>
                                    <span asp-validation-for="Vote" class="text-danger small"></span>
                                    <div class="form-text">Enter a rating between 0 and 5</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                                    <textarea asp-for="Description" class="form-control" rows="8"></textarea>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <div class="form-check form-switch">
                                        <input asp-for="Status" class="form-check-input" type="checkbox"
                                               role="switch" id="statusSwitch" />
                                        <label class="form-check-label fw-bold" for="statusSwitch">
                                            Course Status
                                        </label>
                                    </div>
                                    <div class="form-text">Toggle to activate or deactivate the course</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <a href="@Url.Action("Index", "Courses")" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i> Update Course
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Form validation
        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelector('.needs-validation');
            forms.addEventListener('submit', function(event) {
                if (!forms.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                forms.classList.add('was-validated');
            }, false);

            // Date validation
            const startDate = document.querySelector('input[name="StartDate"]');
            const endDate = document.querySelector('input[name="EndDate"]');

            if (startDate && endDate) {
                startDate.addEventListener('change', function() {
                    if (endDate.value && new Date(startDate.value) > new Date(endDate.value)) {
                        alert('Start date cannot be after end date!');
                        startDate.value = endDate.value;
                    }
                    endDate.min = startDate.value;
                });
            }
        });
    </script>

    <style>
        .card {
            border-radius: 10px;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
            color: #212529;
            font-weight: 600;
        }

            .btn-warning:hover {
                background-color: #e0a800;
                border-color: #d39e00;
            }

        .form-switch .form-check-input {
            width: 3em;
            height: 1.5em;
        }
    </style>
}