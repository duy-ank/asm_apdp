@model ASM_SIMS.Models.CourseViewModel
@{
    ViewData["title"] = "Course Management";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    bool statusSave = Convert.ToBoolean(TempData["save"]);
    string userRole = Context.Session.GetString("UserRole") ?? "";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-graduation-cap me-2"></i>Course Management</h2>
        @if (userRole == "Admin")
        {
            <a class="btn btn-primary" href="@Url.Action("Create", "Courses")">
                <i class="fas fa-plus-circle me-1"></i> Add New Course
            </a>
        }
    </div>

    @if (TempData["save"] != null)
    {
        <div class="alert @(statusSave ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @(statusSave ? "Course created successfully!" : "Failed to create course.")
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-light py-3">
            <h5 class="mb-0"><i class="fas fa-table me-2"></i>Course List</h5>
        </div>
        <div class="card-body">
            @if (Model.courseList.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Category</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Vote</th>
                                <th>Status</th>
                                <th>Created</th>
                                @if (userRole == "Admin")
                                {
                                    <th>Actions</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.courseList)
                            {
                                <tr>
                                    <td class="fw-bold">#@item.Id</td>
                                    <td>@item.NameCourse</td>
                                    <td class="text-truncate" style="max-width: 200px;" title="@item.Description">
                                        @item.Description
                                    </td>
                                    <td>
                                        <span class="badge bg-info text-dark">@item.CategoryName</span>
                                    </td>
                                    <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                                    <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <div class="vote-stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="fas fa-star @(i <= item.Vote ? "text-warning" : "text-muted")"></i>
                                            }
                                            <span class="ms-1 small">(@item.Vote.ToString("0.0"))</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @(item.Status ? "bg-success" : "bg-secondary")">
                                            @(item.Status ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.CreatedAt.HasValue)
                                        {
                                            @item.CreatedAt.Value.ToString("dd-MM-yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    @if (userRole == "Admin")
                                    {
                                        <td>
                                            <div class="d-flex flex-column flex-md-row gap-1">
                                                <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Edit", "Courses", new { id = item.Id })">
                                                    <i class="fas fa-edit me-1"></i> Edit
                                                </a>
                                                <a class="btn btn-outline-danger btn-sm" href="@Url.Action("Delete", "Courses", new { id = item.Id })"
                                                   onclick="return confirm('Are you sure you want to delete this course?');">
                                                    <i class="fas fa-trash me-1"></i> Delete
                                                </a>
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-book fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No courses found</h5>
                    <p class="text-muted">Get started by creating your first course.</p>
                    @if (userRole == "Admin")
                    {
                        <a class="btn btn-primary mt-2" href="@Url.Action("Create", "Courses")">
                            <i class="fas fa-plus me-1"></i> Create Course
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .vote-stars {
        font-size: 0.9rem;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.04);
    }

    .gap-1 {
        gap: 0.25rem;
    }

    .text-truncate {
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>