@model List<ASM_SIMS.Models.StudentViewModel>
@using ASM_SIMS.DB
@{
    ViewData["Title"] = "Student Management";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    bool statusSave = TempData["save"] != null && Convert.ToBoolean(TempData["save"]);
    var classRooms = ViewBag.ClassRooms as List<ClassRoom>;
    var courses = ViewBag.Courses as List<Courses>;
    string userRole = Context.Session.GetString("UserRole") ?? "";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-graduate me-2"></i>Student Management</h2>
        @if (userRole == "Admin")
        {
            <a class="btn btn-primary" asp-action="Create">
                <i class="fas fa-plus-circle me-1"></i> Add New Student
            </a>
        }
    </div>

    @if (TempData["save"] != null)
    {
        <div class="alert @(statusSave ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @(statusSave ? "Operation completed successfully!" : "Operation failed!")
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-light py-3">
            <h5 class="mb-0"><i class="fas fa-users me-2"></i>Student List</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Class</th>
                                <th>Course</th>
                                <th>Status</th>
                                @if (userRole == "Admin")
                                {
                                    <th>Actions</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var classRoom = classRooms?.FirstOrDefault(c => c.Id == item.ClassRoomId);
                                var course = courses?.FirstOrDefault(c => c.Id == item.CourseId);
                                <tr>
                                    <td class="fw-bold">#@item.Id</td>
                                    <td>@item.FullName</td>
                                    <td>
                                        <a href="mailto:@item.Email" class="text-decoration-none">
                                            <i class="fas fa-envelope me-1 text-muted"></i>@item.Email
                                        </a>
                                    </td>
                                    <td>
                                        <a href="tel:@item.Phone" class="text-decoration-none">
                                            <i class="fas fa-phone me-1 text-muted"></i>@item.Phone
                                        </a>
                                    </td>
                                    <td class="text-truncate" style="max-width: 150px;" title="@item.Address">
                                        <i class="fas fa-map-marker-alt me-1 text-muted"></i>@item.Address
                                    </td>
                                    <td>
                                        <span class="badge bg-info text-dark">
                                            @(classRoom?.ClassName ?? "N/A")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">
                                            @(course?.NameCourse ?? "N/A")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(item.Status == "Active" ? "bg-success" : "bg-secondary")">
                                            @item.Status
                                        </span>
                                    </td>
                                    @if (userRole == "Admin")
                                    {
                                        <td>
                                            <div class="d-flex flex-column flex-md-row gap-1">
                                                <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                                    <i class="fas fa-edit me-1"></i> Edit
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                                      onsubmit="return confirm('Are you sure you want to delete this student?');">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                                        <i class="fas fa-trash me-1"></i> Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No students found</h5>
                    <p class="text-muted">Get started by adding your first student.</p>
                    @if (userRole == "Admin")
                    {
                        <a class="btn btn-primary mt-2" asp-action="Create">
                            <i class="fas fa-plus me-1"></i> Add Student
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.04);
    }

    .gap-1 {
        gap: 0.25rem;
    }

    .text-truncate {
        max-width: 150px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .badge {
        font-size: 0.85em;
    }
</style>